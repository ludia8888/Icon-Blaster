# TerminusDB Configuration
# SECURITY: Change these default values for production!
TERMINUSDB_ADMIN_PASS=your_secure_password_here
TERMINUSDB_SERVER_NAME=SpiceTerminusDB
TERMINUS_SERVER_URL=http://localhost:6363
TERMINUS_USER=admin
TERMINUS_ACCOUNT=admin
TERMINUS_KEY=your_secure_password_here

# OMS Configuration
OMS_HOST=0.0.0.0
OMS_PORT=8000
OMS_LOG_LEVEL=INFO

# BFF Configuration
BFF_HOST=0.0.0.0
BFF_PORT=8002
BFF_LOG_LEVEL=INFO
OMS_BASE_URL=http://localhost:8000

# Database Configuration
LABEL_MAPPER_DB_PATH=data/label_mappings.db

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment
ENVIRONMENT=production
DEBUG=false

# PRODUCTION SECURITY NOTES:
# 1. Generate strong, unique passwords for TERMINUSDB_ADMIN_PASS and TERMINUS_KEY
# 2. Use the same password for both values (they must match)
# 3. Copy this file to .env in your deployment environment
# 4. Never commit .env files to version control
# 5. Restrict access to .env files (chmod 600 .env)
# 6. Use a secure password manager to generate and store passwords
# 7. Rotate passwords regularly in production environments