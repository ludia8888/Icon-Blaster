# SIEM Integration Environment Variables

# General SIEM Settings
ENABLE_SIEM_INTEGRATION=true
SIEM_CONFIG_PATH=/etc/oms/siem_config.json

# SIEM Event Filtering
SIEM_INCLUDE_SUCCESS=false
SIEM_SEND_TAMPERING_EVENTS=true
SIEM_SEND_INFO_TAMPERING=false
SIEM_DEFAULT_SEVERITY_THRESHOLD=Medium

# Splunk Configuration
SPLUNK_HEC_TOKEN=your-splunk-hec-token-here
SPLUNK_ENDPOINT=https://splunk.company.com:8088
SPLUNK_INDEX=oms_security

# ELK Stack Configuration  
ELK_USERNAME=oms_user
ELK_PASSWORD=your-elk-password-here
ELK_ENDPOINT=https://elasticsearch.security.company.com:9200
ELK_INDEX=oms-security-logs

# Azure Sentinel Configuration
AZURE_SENTINEL_KEY=your-azure-sentinel-key-here
AZURE_SENTINEL_WORKSPACE_ID=your-workspace-id
AZURE_SENTINEL_ENDPOINT=https://your-workspace.ods.opinsights.azure.com

# Security Webhook Configuration
SECURITY_WEBHOOK_TOKEN=your-webhook-token-here
SECURITY_WEBHOOK_ENDPOINT=https://security-platform.company.com/api/events

# Syslog Configuration
SYSLOG_HOST=siem.company.com
SYSLOG_PORT=514
SYSLOG_FACILITY=16

# Performance Settings
SIEM_BATCH_SIZE=50
SIEM_BATCH_TIMEOUT=30
SIEM_MAX_QUEUE_SIZE=10000
SIEM_RETRY_ATTEMPTS=3
SIEM_RETRY_DELAY=5

# Security Settings
SIEM_ENABLE_TLS=true
SIEM_VERIFY_SSL=true
SIEM_ENABLE_LOCAL_FALLBACK=true
SIEM_LOCAL_FALLBACK_PATH=/var/log/oms/siem_fallback.log

# Debugging
SIEM_DEBUG_MODE=false
SIEM_LOG_LEVEL=INFO