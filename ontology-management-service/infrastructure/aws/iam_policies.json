{
  "oms-eventbridge-publisher": {
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "PublishEventsToOMS",
        "Effect": "Allow",
        "Action": [
          "events:PutEvents"
        ],
        "Resource": "arn:aws:events:*:*:event-bus/oms-events",
        "Condition": {
          "StringEquals": {
            "events:source": "oms"
          },
          "StringLike": {
            "events:detail-type": "oms.*"
          }
        }
      },
      {
        "Sid": "DescribeEventBus",
        "Effect": "Allow",
        "Action": [
          "events:DescribeEventBus"
        ],
        "Resource": "arn:aws:events:*:*:event-bus/oms-events"
      }
    ]
  },
  "oms-dlq-processor": {
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "ProcessDLQMessages",
        "Effect": "Allow",
        "Action": [
          "sqs:SendMessage",
          "sqs:ReceiveMessage",
          "sqs:DeleteMessage",
          "sqs:GetQueueAttributes",
          "sqs:GetQueueUrl",
          "sqs:ChangeMessageVisibility"
        ],
        "Resource": "arn:aws:sqs:*:*:oms-events-dlq"
      },
      {
        "Sid": "KMSDecryption",
        "Effect": "Allow",
        "Action": [
          "kms:Decrypt"
        ],
        "Resource": "arn:aws:kms:*:*:key/*",
        "Condition": {
          "StringEquals": {
            "kms:ViaService": "sqs.*.amazonaws.com"
          }
        }
      }
    ]
  },
  "oms-cloudwatch-monitoring": {
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "PutMetricData",
        "Effect": "Allow",
        "Action": [
          "cloudwatch:PutMetricData"
        ],
        "Resource": "*",
        "Condition": {
          "StringEquals": {
            "cloudwatch:namespace": "OMS/Events"
          }
        }
      },
      {
        "Sid": "ManageAlarms",
        "Effect": "Allow",
        "Action": [
          "cloudwatch:PutMetricAlarm",
          "cloudwatch:DeleteAlarms",
          "cloudwatch:DescribeAlarms"
        ],
        "Resource": "arn:aws:cloudwatch:*:*:alarm:oms-*"
      }
    ]
  }
}